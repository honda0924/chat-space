.flashbox
  .notice
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          =current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to new_group_path do
              =fa_icon 'edit'
          %li.side-header__box__menu__edit-user
            =link_to edit_user_path(current_user) do
              =fa_icon 'cog'
    .groups
      =render :partial => "group"
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          test-group
        %ul.main-header__left-box__member-list
          Member:
          %li.main-header__left-box__member-list__member
            test-user
      .main-header__edit-btn
        Edit
    .messages
      =render :partial => "message"
    .form
      %form#new_message.new_message(action="")
        .input-box
          %input#message-content.input-box__text(type="text" placeholder="type a message")
          %label.input-box__image{for: "message-image"}
            =fa_icon 'image'
            %input#message-image.input-box__image__file(type="file")
        %input.submit-btn(type="submit" value="Send" name="commit")


 
