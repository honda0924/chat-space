.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        test-group
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
          test-user
    .main-header__edit-btn
      Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
          test-user
        %p.message__upper-info__date
          2019/08/13(Tue) 19:49:23
      %p.message__text
        こんにちは！
    .message
      .message__upper-info
        %p.message__upper-info__talker
          test-user
        %p.message__upper-info__date
          2019/08/14(Wed) 15:31:45
      %p.message__text
        さようなら
  .form
    =form_for [@group, @message] do |f|
      .input-box
        = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = fa_icon 'picture-o', class: 'icon_picture'
          = f.file_field :image, class:'input-box__image__file'
      =f.submit 'Send', class: 'submit-btn'